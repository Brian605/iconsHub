<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IconsHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#FFC107</item>
        <item name="colorOnPrimary">#F44336</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icons_3</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/icons_2</item>
        <!-- Customize your theme here. -->
    </style>

    <style parent="Theme.MaterialComponents.Light.Dialog" name="Theme.IconsHub.FullScreenDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:statusBarColor">@color/white</item>
</style>

    <style name="Theme.IconsHub.Slide">

    <item name="android:windowEnterAnimation">@anim/animin</item>

    <item name="android:windowExitAnimation">@anim/animout</item>

</style>
</resources>